<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="15dp"
            android:text="Order Detail"
            android:textColor="@color/contrastTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="end"
            android:paddingRight="16dp"
            android:paddingTop="15dp"
            android:text="I00001"
            android:textColor="@color/contrastTextColor"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/textView4"
        android:layout_weight="1"
        android:background="@color/windowBackground"
        android:paddingTop="13dp"
        android:text="username"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp"
        android:elevation="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:gravity="end"
            android:text="Document"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDocument"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="skripsi.docx"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="16dp"
            android:gravity="end"
            android:paddingTop="10dp"
            android:text="Paper Size"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="A4"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="16dp"
            android:gravity="end"
            android:paddingTop="10dp"
            android:text="Paper Type"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="HVS"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="end"
            android:paddingRight="16dp"
            android:paddingTop="10dp"

            android:text="GSM"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewGSM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="80 GSM"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingRight="16dp"
            android:gravity="end"
            android:paddingTop="10dp"
            android:text="Location"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:text="JL.Jalur Sutera Bartat Kav.21 Tangerang Alam Sutera"
            android:textColor="@color/contrastTextColor"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dividerColor"
        android:elevation="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:paddingTop="15dp"
            android:text="TOTAL"
            android:textAlignment="center"
            android:textColor="@color/contrastTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:text="Rp 15.000"
            android:textAlignment="center"
            android:textColor="@color/contrastTextColor"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dividerColor"
        android:gravity="bottom"
        android:paddingBottom="16dp"
        android:text="Please check all the detail\n
before confirming"
        android:textAlignment="center"
        android:textColor="@color/secondaryText"
        android:elevation="2dp"/>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/buttonColor"
        android:onClick="intentDone"
        android:text="Confirm"
        android:textSize="15sp"
        android:textStyle="bold"
        android:elevation="6dp"/>

</LinearLayout>